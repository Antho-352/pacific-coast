---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import FuelWidget from '../components/Interactive/FuelWidget.astro';
import QuizSection from '../components/Interactive/QuizSection.astro';
import { getALaUnePosts, getRecentPosts, getFeaturedImageUrl, formatDate, extractExcerpt } from '../lib/wordpress.js';

// Initialisation des variables pour éviter les crashs si l'API échoue
let aLaUnePosts = [];
let recentPosts = [];
let error = null;

try {
  // Récupère d'abord les articles "à la une"
  aLaUnePosts = await getALaUnePosts(3);
  
  // Exclut les IDs des articles "à la une" des articles récents pour éviter les doublons
  const aLaUneIds = aLaUnePosts.map(post => post.id);
  recentPosts = await getRecentPosts(21, aLaUneIds);
} catch (e) { 
  error = e.message; 
  console.error('Erreur chargement articles:', e); 
}

const pageTitle = "L'Esprit Pacific Coast";

// Données statiques pour la fiche technique
const specs = [
  { label: "Moteur", value: "V-Twin 52° refroidi par eau" },
  { label: "Cylindrée", value: "800 cc (45 cv en France)" },
  { label: "Puissance", value: "57 ch (42 kW) @ 7500 tr/min" },
  { label: "Couple", value: "67 Nm @ 6000 tr/min" },
  { label: "Transmission", value: "Cardan (arbre de transmission)" },
  { label: "Boîte", value: "5 rapports" },
  { label: "Poids", value: "280 kg à sec" },
  { label: "Réservoir", value: "16 litres (4L de réserve)" },
  { label: "Autonomie", value: "~350 km" },
  { label: "Coffre", value: "140 litres (2 casques intégraux)" },
  { label: "Freins AV", value: "Double disque 296 mm" },
  { label: "Freins AR", value: "Disque simple 296 mm" },
  { label: "Pneu AV", value: "120/90-17" },
  { label: "Pneu AR", value: "140/90-17" },
  { label: "Hauteur selle", value: "775 mm" },
  { label: "Production", value: "1989 - 1998" },
];
---

<Layout title={pageTitle}>
  <Navigation />
  
  <main>
    {/* Hero Section */}
    <div class="relative bg-gray-900 text-white py-24 px-6 mb-12 overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-r from-blue-900 to-gray-900 opacity-90 z-0"></div>
      <div class="relative z-10 max-w-4xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6 tracking-tight">Honda Pacific Coast PC800</h1>
        <p class="text-xl md:text-2xl text-gray-300 mb-8 font-light">Plus qu'une moto, un art de vivre.</p>
        <div class="flex justify-center gap-4">
          <a href="#articles" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-8 rounded-full transition duration-300">
            Découvrir
          </a>
          <a href="/specs" class="bg-transparent border-2 border-white hover:bg-white hover:text-gray-900 text-white font-bold py-3 px-8 rounded-full transition duration-300">
            Fiche technique
          </a>
        </div>
      </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      {/* Widget Prix Essence */}
      <div class="mb-16">
        <FuelWidget />
      </div>

      {/* Articles À la une */}
      {aLaUnePosts.length > 0 && (
        <section id="a-la-une" class="mb-20">
          <h2 class="text-3xl font-bold text-gray-900 mb-10 text-center border-b pb-4">À la Une</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {aLaUnePosts.map(post => (
              <article class="bg-gradient-to-br from-blue-50 to-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition duration-300 flex flex-col h-full border-2 border-blue-200">
                <a href={`/post/${post.slug}`} class="block h-48 overflow-hidden relative group">
                  <img 
                    src={getFeaturedImageUrl(post)} 
                    alt={post.title.rendered}
                    class="w-full h-full object-cover transform group-hover:scale-105 transition duration-500"
                    loading="lazy"
                  />
                  <div class="absolute top-0 right-0 bg-amber-500 text-white text-xs font-bold px-3 py-1 m-2 rounded shadow-md">
                    ⭐ À la Une
                  </div>
                </a>
                <div class="p-6 flex-1 flex flex-col">
                  <div class="text-sm text-gray-500 mb-2 flex items-center">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                    {formatDate(post.date)}
                  </div>
                  <h3 class="text-xl font-bold text-gray-900 mb-3 leading-tight group-hover:text-blue-600 transition">
                    <a href={`/post/${post.slug}`} set:html={post.title.rendered} />
                  </h3>
                  <div class="text-gray-600 mb-4 text-sm flex-1 line-clamp-3" set:html={extractExcerpt(post.excerpt.rendered)} />
                  <a href={`/post/${post.slug}`} class="inline-flex items-center text-blue-600 font-semibold hover:text-blue-800 mt-auto">
                    Lire la suite
                    <svg class="w-4 h-4 ml-1 transform group-hover:translate-x-1 transition" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                  </a>
                </div>
              </article>
            ))}
          </div>
        </section>
      )}

      {/* Articles Récents */}
      <section id="articles" class="mb-20">
        <h2 class="text-3xl font-bold text-gray-900 mb-10 text-center border-b pb-4">Dernières Publications</h2>
        
        {error && (
          <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-8" role="alert">
            <p class="font-bold">Erreur de connexion</p>
            <p>Impossible de charger les articles depuis le site principal ({error}).</p>
          </div>
        )}

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {recentPosts.map(post => (
            <article class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition duration-300 flex flex-col h-full border border-gray-100">
              <a href={`/post/${post.slug}`} class="block h-48 overflow-hidden relative group">
                <img 
                  src={getFeaturedImageUrl(post)} 
                  alt={post.title.rendered}
                  class="w-full h-full object-cover transform group-hover:scale-105 transition duration-500"
                  loading="lazy"
                />
                <div class="absolute top-0 right-0 bg-blue-600 text-white text-xs font-bold px-3 py-1 m-2 rounded">
                  Blog
                </div>
              </a>
              <div class="p-6 flex-1 flex flex-col">
                <div class="text-sm text-gray-500 mb-2 flex items-center">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                  {formatDate(post.date)}
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-3 leading-tight group-hover:text-blue-600 transition">
                  <a href={`/post/${post.slug}`} set:html={post.title.rendered} />
                </h3>
                <div class="text-gray-600 mb-4 text-sm flex-1 line-clamp-3" set:html={extractExcerpt(post.excerpt.rendered)} />
                <a href={`/post/${post.slug}`} class="inline-flex items-center text-blue-600 font-semibold hover:text-blue-800 mt-auto">
                  Lire la suite
                  <svg class="w-4 h-4 ml-1 transform group-hover:translate-x-1 transition" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                </a>
              </div>
            </article>
          ))}
        </div>
      </section>

      {/* Quiz Section */}
      <div class="mb-20">
        <QuizSection />
      </div>

      {/* Fiche Technique Rapide */}
      <section class="mb-20 bg-gray-50 rounded-2xl p-8 md:p-12 shadow-inner">
        <div class="flex flex-col md:flex-row items-center gap-12">
          <div class="md:w-1/3">
             <h2 class="text-3xl font-bold text-gray-900 mb-6">Fiche Technique Rapide</h2>
             <p class="text-gray-600 mb-6">
               La PC800 est une machine unique, conçue pour durer et pour le confort. Voici les chiffres clés qui font sa légende.
             </p>
             <a href="/specs" class="inline-block bg-gray-900 hover:bg-gray-800 text-white font-bold py-3 px-6 rounded-lg transition duration-300">
               Voir la fiche complète
             </a>
          </div>
          <div class="md:w-2/3 w-full">
            <div class="grid grid-cols-2 sm:grid-cols-3 gap-4">
              {specs.map(spec => (
                <div class="bg-white p-4 rounded-lg shadow-sm border border-gray-100">
                  <div class="text-xs text-gray-500 uppercase tracking-wide font-semibold mb-1">{spec.label}</div>
                  <div class="text-gray-900 font-medium">{spec.value}</div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </section>

    </div>
  </main>

  <Footer />
</Layout>