---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import HeroSection from '../components/HeroSection.astro';
import GallerySection from '../components/GallerySection.astro';
import CommunitySection from '../components/CommunitySection.astro';
import FuelWidget from '../components/Interactive/FuelWidget.astro';
import QuizSection from '../components/Interactive/QuizSection.astro';
import { getALaUnePosts, getRecentPosts, getFeaturedImageUrl, formatDate, extractExcerpt } from '../lib/wordpress.js';

// Initialisation des variables pour éviter les crashs si l'API échoue
let aLaUnePosts = [];
let recentPosts = [];
let error = null;

try {
  aLaUnePosts = await getALaUnePosts(3);
  const aLaUneIds = aLaUnePosts.map(post => post.id);
  recentPosts = await getRecentPosts(21, aLaUneIds);
} catch (e) { 
  error = e.message; 
  console.error('Erreur chargement articles:', e); 
}

const pageTitle = "PC800.fr - L'Esprit Pacific Coast";
const pageDescription = "La référence pour les passionnés de Honda Pacific Coast PC800. Découvrez l'histoire, les spécifications et les guides de cette moto culte des années 90.";

const specs = [
  { label: "Moteur", value: "V-Twin 52° refroidi par eau" },
  { label: "Cylindrée", value: "800 cc" },
  { label: "Puissance", value: "57 ch @ 7500 tr/min" },
  { label: "Couple", value: "67 Nm @ 6000 tr/min" },
  { label: "Transmission", value: "Cardan" },
  { label: "Boîte", value: "5 rapports" },
  { label: "Poids", value: "280 kg à sec" },
  { label: "Réservoir", value: "16 litres" },
  { label: "Autonomie", value: "~350 km" },
  { label: "Coffre", value: "140 litres" },
  { label: "Freins AV", value: "Double disque 296 mm" },
  { label: "Freins AR", value: "Disque simple 296 mm" },
  { label: "Pneu AV", value: "120/90-17" },
  { label: "Pneu AR", value: "140/90-17" },
  { label: "Hauteur selle", value: "775 mm" },
  { label: "Production", value: "1989 - 1998" },
];
---

<Layout title={pageTitle} description={pageDescription}>
  <Navigation />
  
  <main>
    <!-- Hero (image) -->
    <HeroSection 
      title="Honda Pacific Coast PC800"
      subtitle="La GT des années 90 qui traverse les décennies"
      badge="Produite de 1989 à 1998"
    />

    <!-- Section À la une - FOND BLANC -->
    {aLaUnePosts.length > 0 && (
      <section id="a-la-une" class="section bg-white">
        <div class="container">
          <div class="section-header">
            <span class="section-label">À la Une</span>
            <h2 class="section-header__title">Articles en vedette</h2>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {aLaUnePosts.map(post => (
              <article class="card group">
                <a href={`/post/${post.slug}`} class="block aspect-video overflow-hidden">
                  <img 
                    src={getFeaturedImageUrl(post)} 
                    alt={post.title.rendered}
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                    loading="lazy"
                  />
                </a>
                <div class="p-5">
                  <div class="text-xs text-gray-500 mb-2 flex items-center gap-2">
                    <time datetime={post.date}>{formatDate(post.date)}</time>
                  </div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-2 leading-tight group-hover:text-red-700 transition-colors">
                    <a href={`/post/${post.slug}`} set:html={post.title.rendered} />
                  </h3>
                  <div class="text-gray-600 text-sm line-clamp-2" set:html={extractExcerpt(post.excerpt.rendered)} />
                </div>
              </article>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Derniers articles - FOND GRIS -->
    <section id="articles" class="section bg-section-gray">
      <div class="container">
        <div class="section-header">
          <span class="section-label">Actualités</span>
          <h2 class="section-header__title">Derniers articles</h2>
        </div>
        
        {error && (
          <div class="bg-amber-50 border border-amber-200 rounded-lg p-4 mb-6" role="alert">
            <p class="text-amber-800 text-sm">Impossible de charger les articles. Veuillez réessayer plus tard.</p>
          </div>
        )}

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          {recentPosts.map(post => (
            <article class="card group">
              <a href={`/post/${post.slug}`} class="block aspect-video overflow-hidden">
                <img 
                  src={getFeaturedImageUrl(post)} 
                  alt={post.title.rendered}
                  class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                  loading="lazy"
                />
              </a>
              <div class="p-5">
                <div class="text-xs text-gray-500 mb-2">
                  <time datetime={post.date}>{formatDate(post.date)}</time>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2 leading-tight group-hover:text-red-700 transition-colors">
                  <a href={`/post/${post.slug}`} set:html={post.title.rendered} />
                </h3>
                <div class="text-gray-600 text-sm line-clamp-2" set:html={extractExcerpt(post.excerpt.rendered)} />
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- Outils (Carburant) - FOND BLANC -->
    <section id="outils" class="section bg-white">
      <div class="container">
        <div class="max-w-2xl mx-auto">
          <div class="text-center mb-8">
            <span class="section-label">Outils pratiques</span>
            <h2 class="section-header__title">Prix des carburants</h2>
            <p class="section-header__intro mx-auto">
              Préparez vos trajets et gardez un œil sur votre budget. Cet outil vous permet de consulter rapidement les prix des carburants autour de chez vous.
            </p>
          </div>
          
          <div class="card p-6 md:p-8">
            <FuelWidget />
          </div>
        </div>
      </div>
    </section>

    <!-- Quiz - FOND GRIS -->
    <section id="quiz" class="section bg-section-gray">
      <div class="container">
        <QuizSection />
      </div>
    </section>

    <!-- Galerie - FOND BEIGE -->
    <section id="galerie" class="section bg-section-beige">
      <div class="container">
        <GallerySection />
      </div>
    </section>

    <!-- Histoire - FOND SOMBRE -->
    <section class="section bg-metal-900 text-white">
      <div class="container">
        <div class="max-w-3xl mx-auto text-center">
          <span class="inline-block text-xs font-bold uppercase tracking-wider text-red-400 bg-red-400/10 px-3 py-1 rounded mb-4">Histoire</span>
          <h2 class="text-3xl md:text-4xl font-extrabold mb-6">L'histoire de la Pacific Coast</h2>
          <p class="text-gray-300 text-lg mb-8 leading-relaxed">
            De son lancement révolutionnaire en 1989 à son statut de moto culte aujourd'hui, découvrez l'histoire complète de la PC800.
          </p>
          <a href="/histoire" class="btn btn-primary">
            Lire l'histoire complète
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Fiche Technique - FOND BLANC -->
    <section id="technique" class="section bg-white">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          <div class="section-header text-center">
            <span class="section-label">Spécifications</span>
            <h2 class="section-header__title">Fiche technique rapide</h2>
            <p class="section-header__intro mx-auto">
              La PC800 est une machine unique, conçue pour durer et pour le confort. Voici les chiffres clés qui font sa légende.
            </p>
          </div>
          
          <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
            {specs.map(spec => (
              <div class="bg-section-gray rounded-lg p-4 border border-gray-100">
                <div class="text-xs text-gray-500 uppercase tracking-wide font-semibold mb-1">{spec.label}</div>
                <div class="text-gray-900 font-bold">{spec.value}</div>
              </div>
            ))}
          </div>
          
          <div class="text-center mt-8">
            <a href="/specs" class="btn btn-secondary">
              Voir la fiche complète
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Contribuer - FOND SOMBRE -->
    <CommunitySection />
  </main>

  <Footer />
</Layout>

<style>
  /* Section backgrounds */
  .bg-white { background-color: #FFFFFF; }
  .bg-section-gray { background-color: #F8F9FA; }
  .bg-section-beige { background-color: #FFF9F5; }
  .bg-metal-900 { background-color: #1A1A1A; }
  
  /* Section base */
  .section {
    padding: 3rem 0;
    border-top: 1px solid rgba(0,0,0,0.06);
  }
  
  @media (min-width: 768px) {
    .section { padding: 3.5rem 0; }
  }
  
  /* Container */
  .container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  @media (min-width: 640px) {
    .container { padding: 0 1.5rem; }
  }
  
  /* Section label avec fond */
  .section-label {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #C53030;
    background-color: #FEE2E2;
    padding: 0.375rem 0.75rem;
    border-radius: 0.375rem;
    margin-bottom: 1rem;
  }
  
  /* Section header */
  .section-header {
    margin-bottom: 2rem;
  }
  
  .section-header__title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 800;
    color: #111827;
    line-height: 1.2;
    letter-spacing: -0.02em;
  }
  
  .section-header__intro {
    font-size: 1.125rem;
    color: #4B5563;
    line-height: 1.7;
    max-width: 600px;
    margin-top: 0.75rem;
  }
  
  /* Cards */
  .card {
    background-color: white;
    border: 1px solid #E5E7EB;
    border-radius: 0.75rem;
    overflow: hidden;
    transition: all 0.2s ease;
  }
  
  .card:hover {
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
    border-color: #D1D5DB;
    transform: translateY(-3px);
  }
  
  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.875rem 1.75rem;
    font-size: 1rem;
    font-weight: 700;
    border-radius: 0.5rem;
    transition: all 0.2s ease;
    cursor: pointer;
    border: none;
  }
  
  .btn-primary {
    background-color: #C53030;
    color: white;
    box-shadow: 0 4px 14px rgba(197, 48, 48, 0.35);
  }
  
  .btn-primary:hover {
    background-color: #9B2C2C;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(197, 48, 48, 0.45);
  }
  
  .btn-secondary {
    background-color: white;
    color: #111827;
    border: 2px solid #D1D5DB;
  }
  
  .btn-secondary:hover {
    border-color: #C53030;
    color: #C53030;
    transform: translateY(-2px);
  }
  
  /* Utilities */
  .text-gray-500 { color: #6B7280; }
  .text-gray-600 { color: #4B5563; }
  .text-gray-900 { color: #111827; }
  .text-gray-300 { color: #D1D5DB; }
  .text-red-400 { color: #F87171; }
  .text-red-700 { color: #C53030; }
  .text-white { color: white; }
  
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .aspect-video { aspect-ratio: 16 / 9; }
  
  .object-cover { object-fit: cover; }
  
  .transition-transform { transition-property: transform; }
  .transition-colors { transition-property: color, background-color, border-color; }
  .duration-500 { transition-duration: 500ms; }
  
  .group:hover .group-hover\\:scale-105 { transform: scale(1.05); }
  .group:hover .group-hover\\:text-red-700 { color: #C53030; }
</style>