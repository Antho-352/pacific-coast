---
/**
 * Hero Section - PC800.fr
 * Design premium, sobre, touring
 */

interface Props {
  title?: string;
  subtitle?: string;
  badge?: string;
}

const {
  title = "Honda Pacific Coast PC800",
  subtitle = "La GT des années 90 qui traverse les décennies",
  badge = "Produite de 1989 à 1998"
} = Astro.props;
---

<section class="relative bg-metal-900 text-white overflow-hidden min-h-[85vh] flex items-center">
  <!-- Background image avec overlay -->
  <div class="absolute inset-0">
    <img 
      src="https://images.unsplash.com/photo-1558981852-426c6c22a060?w=1920&q=80" 
      alt="Moto sur route côtière" 
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-gradient-to-r from-metal-900/95 via-metal-900/85 to-metal-900/90"></div>
  </div>
  
  <div class="relative container mx-auto px-4 py-24 md:py-32">
    <div class="max-w-3xl">
      <!-- Badge -->
      <div class="inline-flex items-center gap-2 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full px-4 py-1.5 mb-6">
        <span class="w-1.5 h-1.5 bg-red-500 rounded-full"></span>
        <span class="text-sm text-gray-300">{badge}</span>
      </div>
      
      <!-- Title -->
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight mb-6">
        {title}
      </h1>
      
      <!-- Subtitle -->
      <p class="text-xl md:text-2xl text-gray-200 mb-8 max-w-2xl leading-relaxed">
        {subtitle}
      </p>
      
      <!-- CTAs -->
      <div class="flex flex-col sm:flex-row gap-4">
        <a href="#articles" class="inline-flex items-center justify-center px-6 py-3 bg-red-700 hover:bg-red-800 text-white font-medium rounded-lg transition-colors">
          Découvrir
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
          </svg>
        </a>
        <a href="/histoire" class="inline-flex items-center justify-center px-6 py-3 border-2 border-white/30 text-white font-medium rounded-lg hover:bg-white/10 transition-colors">
          L'histoire
        </a>
      </div>
      
      <!-- Stats -->
      <div class="mt-16 grid grid-cols-2 md:grid-cols-4 gap-8 border-t border-white/10 pt-8">
        <div>
          <div class="text-2xl md:text-3xl font-bold text-white">1989</div>
          <div class="text-sm text-gray-300 mt-1">Lancement</div>
        </div>
        <div>
          <div class="text-2xl md:text-3xl font-bold text-white">140L</div>
          <div class="text-sm text-gray-300 mt-1">Coffre</div>
        </div>
        <div>
          <div class="text-2xl md:text-3xl font-bold text-white">280kg</div>
          <div class="text-sm text-gray-300 mt-1">Poids</div>
        </div>
        <div>
          <div class="text-2xl md:text-3xl font-bold text-white">Cardan</div>
          <div class="text-sm text-gray-300 mt-1">Transmission</div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2">
    <a href="#articles" class="text-gray-500 hover:text-white transition-colors">
      <svg class="w-6 h-6 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </a>
  </div>
</section>

<style>
  .container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  .bg-metal-900 { background-color: #1C1917; }
  .bg-metal-800 { background-color: #292524; }
</style>