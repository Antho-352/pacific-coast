---
/**
 * Hero Section - PC800.fr
 * Design premium avec overlay pour lisibilité
 */

interface Props {
  title?: string;
  subtitle?: string;
  badge?: string;
}

const {
  title = "Honda Pacific Coast PC800",
  subtitle = "La GT des années 90 qui traverse les décennies",
  badge = "Produite de 1989 à 1998"
} = Astro.props;
---

<section class="relative bg-metal-900 text-white overflow-hidden min-h-[85vh] flex items-center">
  <!-- Background image -->
  <div class="absolute inset-0">
    <img 
      src="https://images.unsplash.com/photo-1558981852-426c6c22a060?w=1920&q=80" 
      alt="Moto sur route côtière" 
      class="w-full h-full object-cover"
    />
    <!-- Overlay dégradé vertical fort -->
    <div class="absolute inset-0 bg-gradient-to-b from-black/30 via-black/50 to-black/70"></div>
    <!-- Overlay additionnel pour assombrir davantage -->
    <div class="absolute inset-0 bg-black/40"></div>
  </div>
  
  <div class="relative container mx-auto px-4 py-20 md:py-24">
    <div class="max-w-3xl">
      <!-- Badge -->
      <div class="inline-flex items-center gap-2 bg-black/50 backdrop-blur-sm border border-white/30 rounded-full px-4 py-2 mb-6">
        <span class="w-2 h-2 bg-red-500 rounded-full animate-pulse"></span>
        <span class="text-sm text-white font-medium">{badge}</span>
      </div>
      
      <!-- Title -->
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold tracking-tight mb-6 text-white drop-shadow-lg">
        {title}
      </h1>
      
      <!-- Subtitle avec text-shadow fort -->
      <p class="text-xl md:text-2xl text-white mb-8 max-w-2xl leading-relaxed font-semibold" style="text-shadow: 0 4px 12px rgba(0,0,0,0.8), 0 2px 4px rgba(0,0,0,0.6);">
        {subtitle}
      </p>
      
      <!-- CTAs avec style renforcé -->
      <div class="flex flex-col sm:flex-row gap-4">
        <a href="#articles" class="hero-btn-primary">
          Découvrir
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
          </svg>
        </a>
        <a href="/histoire" class="hero-btn-secondary">
          L'histoire
        </a>
      </div>
      
      <!-- Stats avec fond noir semi-transparent -->
      <div class="mt-12 grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="stat-card">
          <div class="text-2xl md:text-3xl font-extrabold text-white">1989</div>
          <div class="text-sm text-gray-300 mt-1 font-medium">Lancement</div>
        </div>
        <div class="stat-card">
          <div class="text-2xl md:text-3xl font-extrabold text-white">140L</div>
          <div class="text-sm text-gray-300 mt-1 font-medium">Coffre</div>
        </div>
        <div class="stat-card">
          <div class="text-2xl md:text-3xl font-extrabold text-white">280kg</div>
          <div class="text-sm text-gray-300 mt-1 font-medium">Poids</div>
        </div>
        <div class="stat-card">
          <div class="text-2xl md:text-3xl font-extrabold text-white">Cardan</div>
          <div class="text-sm text-gray-300 mt-1 font-medium">Transmission</div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-6 left-1/2 -translate-x-1/2">
    <a href="#articles" class="text-white/70 hover:text-white transition-colors">
      <svg class="w-6 h-6 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </a>
  </div>
</section>

<style>
  .container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  .bg-metal-900 { background-color: #1C1917; }
  
  .hero-btn-primary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.875rem 1.75rem;
    background-color: #C53030;
    color: white;
    font-weight: 700;
    font-size: 1rem;
    border-radius: 0.5rem;
    box-shadow: 0 4px 12px rgba(197, 48, 48, 0.4), 0 2px 4px rgba(0,0,0,0.3);
    transition: all 0.2s ease;
  }
  
  .hero-btn-primary:hover {
    background-color: #9B2C2C;
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(197, 48, 48, 0.5), 0 4px 6px rgba(0,0,0,0.4);
  }
  
  .hero-btn-secondary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.875rem 1.75rem;
    background-color: rgba(255,255,255,0.1);
    border: 2px solid rgba(255,255,255,0.4);
    color: white;
    font-weight: 700;
    font-size: 1rem;
    border-radius: 0.5rem;
    backdrop-filter: blur(4px);
    transition: all 0.2s ease;
  }
  
  .hero-btn-secondary:hover {
    background-color: rgba(255,255,255,0.2);
    transform: translateY(-2px);
  }
  
  .stat-card {
    background-color: rgba(0,0,0,0.6);
    border: 1px solid rgba(255,255,255,0.15);
    border-radius: 0.75rem;
    padding: 1.25rem;
    text-align: center;
    backdrop-filter: blur(4px);
  }
</style>